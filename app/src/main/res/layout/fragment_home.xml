<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/bokjiro"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:src="@drawable/bokjiro"
            tools:ignore="MissingConstraints"
             />
        <ImageView
            android:id="@+id/jeongbu"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/jeongbu24"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints"
            android:layout_toRightOf="@+id/bokjiro"/>

        <ImageView
            android:id="@+id/sarang"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/sarang"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints"
            android:layout_toRightOf="@+id/jeongbu"/>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_below="@+id/bokjiro"
            android:id="@+id/cardview_banner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            >
            <ViewFlipper android:id="@+id/viewFlipper1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:ignore="MissingConstraints">
                <ImageView android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/donut"/>
                <ImageView android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ecliar"/>
                <ImageView android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/honey"/>
            </ViewFlipper>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_zzim"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_below="@+id/cardview_banner"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/zzim_subject"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="찜한 지원 사업"
                    />
                <TextView
                    android:id="@+id/zzim1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_below="@+id/zzim_subject"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/zzim2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/zzim1"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/zzim3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/zzim2"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_board"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_below="@+id/cardview_zzim"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/board_subject"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="게시판"
                    />
                <ListView
                    android:id="@+id/home_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/board_subject"
                    android:dividerHeight="0px"
                    android:divider="#FFFFFF"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_popular"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_below="@+id/cardview_board"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="실시간 인기 지원사업"
                />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>