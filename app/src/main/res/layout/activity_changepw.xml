<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_changepw">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mypage_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로가기"
            android:clickable="true"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="비밀번호 변경"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="현재 비밀번호"
        android:textColor="@color/black"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/current_pw"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/current_pw_txt"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@null"
            android:textSize="15dp"
            android:hint="현재 비밀번호"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="새 비밀번호"
        android:textColor="@color/black" />
    <androidx.cardview.widget.CardView
        android:id="@+id/new_pw"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/new_pw_txt"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@null"
            android:textSize="15dp"
            android:hint="새 비밀번호"
            android:inputType="textPassword"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/new_pw_confirm"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/new_pw_confirm_txt"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@null"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:hint="새 비밀번호 확인"
            android:inputType="textPassword"/>
<!--        <ImageView-->
<!--            android:id="@+id/setImage"-->
<!--            android:layout_width="22dp"-->
<!--            android:layout_weight="1.5"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_marginRight="20dp"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:layout_gravity="right"-->
<!--            android:scaleType="fitStart"/>-->
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:id="@+id/pw_change"
        android:text="비밀번호 변경"/>
</LinearLayout>